@page "/produtos/{Id:int}/excluir"
@rendermode InteractiveServer

@using LucasAguiar.Models;
@inject ProdutoDAO produtoDAO;
@inject NavigationManager Navigation;

<PageTitle>Produtos</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Exclusão de Produto</h1>

@if (erro != string.Empty)
{
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
    <strong class="font-bold">Erro!</strong>
    <span class="block sm:inline">@erro</span>
  </div>
}


<EditForm Model="produto" OnSubmit="Excluir">
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
    <strong class="font-bold">Atenção!</strong>
    <span class="block sm:inline">Esta ação não pode ser desfeita.</span>


    <p class="text-lg">Tem certeza que deseja excluir o produto <strong>@produto.NomeProduto</strong>?</p>
  </div>


  <button type="submit" class="bnt-exclui mt-2">Excluir</button>
  <a href="/produto" class="bnt-cancela mt-2">Cancelar</a>

</EditForm>

@code {

  private string erro = string.Empty;

  [Parameter]
  public int Id { get; set; }

  [SupplyParameterFromForm]
  private Produto produto { get; set; } = new();

  protected override void OnInitialized()
  {
    var _produto = produtoDAO.BuscarPorId(Id);

    if (_produto != null)
    {
      produto = _produto;
    }
    else
    {
      erro = "Produto não encontrado.";
    }
  }

  private void cancela()
  {
  
 
      Navigation.NavigateTo("/produto");
 

  }
  private void Excluir()
  {
    try
    {
      produtoDAO.Excluir(produto.IdProduto);

      Navigation.NavigateTo("/produto");
    }
    catch (Exception ex)
    {
      erro = $"Erro ao excluir o produto: {ex.Message}";
    }

  }
  
}
<style>
.bnt-exclui {

      background-color: #fa9910;
    color: white;
    padding: 8px 14px;
    text-decoration: none;
    border-radius: 6px;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: 0.3s ease-in-out;
    border: none;
}
.bnt-cancela {
       background-color: #fa9910;
    color: white;
    padding: 8px 14px;
    text-decoration: none;
    border-radius: 6px;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: 0.3s ease-in-out;
    border: none;
}
</style>
}