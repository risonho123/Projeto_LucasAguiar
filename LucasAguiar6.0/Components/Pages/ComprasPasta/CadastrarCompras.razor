@page "/compra/novo"
@rendermode InteractiveServer

@using LucasAguiar.Models
@using LucasAguiar.Configs
@inject CompraDAO compraDAO
@inject ProdutoDAO produtoDAO
@inject FornecedorDAO fornecedorDAO
@inject FuncionarioDAO funcionarioDAO
@inject NavigationManager Navigation

<PageTitle>Compra - Nova</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Nova Compra</h1>

@if (erro != null)
{
    <div class="alert alert-danger">@erro</div>
}

<EditForm Model="_novaCompra" OnValidSubmit="Salvar">
    <div class="row">
        <div class="col-md-6">
            <InputDate class="form-control mb-2" @bind-Value="_novaCompra.DataCompra" />
            <InputText class="form-control mb-2" @bind-Value="_novaCompra.ValorCompra" placeholder="Valor" />
            <InputText class="form-control mb-2" @bind-Value="_novaCompra.ItemCompra" placeholder="Item" />
            <InputText class="form-control mb-2" @bind-Value="_novaCompra.Quantidade" placeholder="Quantidade" />

            <label>Produto</label>
            <select class="form-control mb-2" @bind="_novaCompra.IdProduto">
                <option value="">Selecione</option>
                @foreach (var p in produtos)
                {
                    <option value="@p.IdProduto">@p.NomeProduto</option>
                }
            </select>

            <label>Fornecedor</label>
            <select class="form-control mb-2" @bind="_novaCompra.IdFornecedor">
                <option value="">Selecione</option>
                @foreach (var f in fornecedores)
                {
                    <option value="@f.IdFornecedor">@f.NomeFornecedor</option>
                }
            </select>

            <label>Funcionário</label>
            <select class="form-control mb-2" @bind="_novaCompra.IdFuncionario">
                <option value="">Selecione</option>
                @foreach (var u in funcionarios)
                {
                    <option value="@u.IdFuncionario">@u.NomeFuncionario</option>
                }
            </select>

            <button type="submit" class="btn btn-primary mt-3">Salvar</button>
        </div>
    </div>
</EditForm>

@code {
    
    private string? erro = null;
    private Compra _novaCompra = new();

    private List<Produto> produtos = new();
    private List<Fornecedor> fornecedores = new();
    private List<Funcionario> funcionarios = new();

    protected override void OnInitialized()
    {
        produtos = produtoDAO.ListarTodos();
        fornecedores = fornecedorDAO.ListarTodos();
        funcionarios = funcionarioDAO.ListarTodos();
    }

    private void Salvar()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(_novaCompra.ItemCompra))
                throw new Exception("O campo item é obrigatório.");

            compraDAO.Inserir(_novaCompra);
            Navigation.NavigateTo("/compra");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }
    }
}
