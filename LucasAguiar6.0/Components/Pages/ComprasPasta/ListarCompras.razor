@page "/compra"
@using LucasAguiar.Models
@using LucasAguiar.Configs
@inject CompraDAO compraDAO

<PageTitle>Lista de Compras</PageTitle>

<h1 class="titulo-lista">LISTA DE COMPRAS</h1>

<NavLink href="/compra/novo" class="botao-novo">+ Nova Compra</NavLink>

<table class="tabela-compras">
    <thead>
        <tr>
            <th>#</th>
            <th>Data</th>
            <th>Valor</th>
            <th>Item</th>
            <th>Quantidade</th>
            <th>Produto</th>
            <th>Fornecedor</th>
            <th>Funcion√°rio</th>
        </tr>
    </thead>
    <tbody>
        @{
            int contador = 1;
        }

        @foreach (var compra in listaCompras)
        {
            <tr>
                <td>@contador</td>
                <td>@compra.DataCompra.ToShortDateString()</td>
                <td>@compra.ValorCompra</td>
                <td>@compra.ItemCompra</td>
                <td>@compra.Quantidade</td>
                <td>@compra.NomeProduto</td>
                <td>@compra.NomeFornecedor</td>
                <td>@compra.NomeFuncionario</td>
            </tr>
            contador++;
        }
    </tbody>
</table>

<style>
    .titulo-lista {
        font-size: 1.8rem;
        font-weight: bold;
        color: #e67e22;
        margin-bottom: 20px;
        border-bottom: 2px solid #e67e22;
        padding-bottom: 10px;
    }

    .botao-novo {
        background-color: #e67e22;
        color: white;
        font-weight: bold;
        padding: 8px 16px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
        transition: background-color 0.3s ease;
    }

    .botao-novo:hover {
        background-color: #d35400;
    }

    .tabela-compras {
        width: 100%;
        border-collapse: collapse;
        background-color: #fffaf3;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .tabela-compras th {
        background-color: #f39c12;
        color: white;
        padding: 12px;
        text-align: left;
    }

    .tabela-compras td {
        padding: 10px;
        border-bottom: 1px solid #f0f0f0;
    }

    .tabela-compras tr:nth-child(even) {
        background-color: #fdf2e9;
    }

    .tabela-compras tr:hover {
        background-color: #fdebd0;
    }
</style>

@code {
    private List<Compra> listaCompras = new();

    protected override void OnInitialized()
    {
        listaCompras = compraDAO.ListarTodos();
    }
}