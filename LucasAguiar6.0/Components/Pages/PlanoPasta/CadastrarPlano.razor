@page "/plano/novo"
@rendermode InteractiveServer

@using LucasAguiar.Models
@using LucasAguiar.Configs
@inject NavigationManager Navigation
@inject PlanoDAO planoDAO

<PageTitle>Produto - Novo</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Novo Plano</h1>

@if (erro != null)
{
    <div class="alert alert-danger">@erro</div>
}

<EditForm Model="_novoPlano" OnValidSubmit="Salvar">
    <div class="row">
        <div class="col-md-6">
            <InputText class="form-control mb-2" @bind-Value="_novoPlano.NomePlano" placeholder="Nome do Plano" />
            <InputText class="form-control mb-2" @bind-Value="_novoPlano.Descricao" placeholder="Descrição" />
            <InputNumber class="form-control mb-2" @bind-Value="_novoPlano.Valor" placeholder="Valor" />

            <button type="submit" class="btn btn-primary mt-3">Salvar</button>
        </div>
    </div>
</EditForm>

@code {
    


    private string? erro = null;
    private Plano _novoPlano = new();
    

    private void Salvar()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(_novoPlano.NomePlano))
                throw new Exception("O nome do Plano é obrigatório.");

            planoDAO.Inserir(_novoPlano);
            Navigation.NavigateTo("/ListarPlano");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }
    }
}
