@page "/fornecedores/novo"
@rendermode InteractiveServer

@using LucasAguiar.Configs;
@using LucasAguiar.Models;
@inject FornecedorDAO fornecedorDAO;
@inject NavigationManager Navigation;

<PageTitle>Fornecedor - Novo</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Novo Fornecedor</h1>

@if (erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}


<div class="row">
    <div class="col">
        <EditForm Model="_novoFornecedor" OnValidSubmit="Salvar">
            <div class="form-group mb-4">
                <label>Nome</label>
                <input @bind-value="_novoFornecedor!.NomeFornecedor" type="text" class="form-control" name="nome" placeholder="Informe o nome do Fornecedor" />
            </div>

            <div class="form-group mb-4">
                <label> Email</label>
                <input @bind-value="_novoFornecedor!.Email" type="text" class="form-control" name="email" placeholder="Informe o Email do Fornecedor" />
            </div>

            <div class="form-group mb-4">
                <label>Telefone</label>
                <input @bind-value="_novoFornecedor!.Telefone" type="text" class="form-control" name="telefone" placeholder="Informe o telefone do Fornecedor" />
            </div>

            <div class="form-group mb-4">
                <label>Tipo de Produto</label>
                <InputTextArea class="form-control" @bind-Value="_novoFornecedor.TipoProd" rows="5" />

            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
        </EditForm>
    </div>
</div>

@code {
    private string? erro = null;

    [SupplyParameterFromForm]
    private Fornecedor? _novoFornecedor { get; set; } = new();

    private void Salvar()
    {

        try
        {
            if (_novoFornecedor.NomeFornecedor is null || _novoFornecedor.NomeFornecedor == "")
            {
                throw new Exception("O campo nome é obrigatório");
            }

            fornecedorDAO.Inserir(_novoFornecedor);

            Navigation.NavigateTo("/fornecedores");
        }
        catch (Exception ex)
        {
            erro = ex.Message;
        }


    }

}
