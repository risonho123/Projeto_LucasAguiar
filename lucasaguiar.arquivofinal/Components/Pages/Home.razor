@page "/"

<PageTitle>Home</PageTitle>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lucas Aguiar</title>
    <link rel="shortcut icon" href="Logo_BarbeariaLucasAguiar.png" type="image/x-icon">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Layout geral */
        html, body {
          margin: 0;
          padding: 0;
          height: 100%;
        }

        body {
          display: flex;
          height: 100vh; /* ocupa toda a tela */
          background: #f4f4f4;
          font-family: Arial, sans-serif;
        }

        /* Área principal */
        .content {
          flex: 1;
          display: grid;
          grid-template-columns: 1fr 1fr;
          grid-template-rows: 1fr auto; /* gráfico ocupa espaço máximo, caixas se ajustam automaticamente */
          gap: 20px;
          padding: 20px;
          height: 100%;
          box-sizing: border-box;
        }

        .card {
          background: white;
          border-radius: 15px;
          padding: 20px;
          box-shadow: 0 2px 8px rgba(0,0,0,0.1);
          display: flex;
          flex-direction: column;
          justify-content: center;
        }

        /* Card do gráfico de barras */
        .bar-card {
          display: flex;
          flex-direction: column;
          justify-content: flex-end;
        }

        .bar-card canvas,
        .card canvas {
          width: 100% !important;
          height: 100% !important;
        }

        /* Caixas inferiores */
        .bottom-boxes {
          grid-column: span 2;
          display: flex;
          justify-content: space-around;
          align-items: center; /* centraliza verticalmente */
          gap: 10px;
        }

        .box {
          flex: 1;
          text-align: center;
          font-size: 16px;
          font-weight: bold;
          color: white;
          padding: 10px 0; /* reduz o padding */
          border-radius: 15px;
        }

        .receita { background: green; }
        .despesa { background: red; }
        .lucro   { background: goldenrod; }
    </style>
</head>
<body>

    <!-- Conteúdo -->
    <div class="content">
        <!-- Gráfico de barras -->
        <div class="card bar-card">
            <canvas id="barChart"></canvas>
        </div>

        <!-- Gráfico de pizza -->
        <div class="card">
            <canvas id="pieChart"></canvas>
        </div>

        <!-- Caixas inferiores -->
        <div class="bottom-boxes">
            <div class="box receita">Receita: R$ 15.000,00</div>
            <div class="box despesa">Despesa: R$ 7.000,00</div>
            <div class="box lucro">Lucro: R$ 8.000,00</div>
        </div>
    </div>

    <script>
        // Gráfico de barras
               

        const ctxBar = document.getElementById('barChart').getContext('2d');
        new Chart(ctxBar, {
          type: 'bar',
          data: {
            labels: ['JAN', 'FEV', 'MAR', 'ABR', 'MAI'],
            datasets: [{
              label: 'Vendas',
              data: [2500, 5000, 4000, 2200, 4300],
              backgroundColor: 'orange'
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              y: {
                beginAtZero: true,
                ticks: {
                  stepSize: 1000
                }
              }
            }
          }
        });

        // Gráfico de pizza
        const ctxPie = document.getElementById('pieChart').getContext('2d');
        new Chart(ctxPie, {
          type: 'pie',
          data: {
            labels: ['Clientes com plano', 'Clientes sem plano'],
            datasets: [{
              data: [30, 70],
              backgroundColor: ['#66b3ff', '#66ff66']
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false
          }
        });
    </script>
</body>
</html>
